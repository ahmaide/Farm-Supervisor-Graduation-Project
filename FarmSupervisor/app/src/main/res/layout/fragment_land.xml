<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity">

        <LinearLayout
            android:id="@+id/mainLayoutLands"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:background="@drawable/home_top_background">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="110dp"
                    android:layout_height="107dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="51dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/app_logo_2_photoroom_png_photoroom"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/wishlist"
                    android:layout_width="48dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/green_love"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="260dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="16dp"
                    android:text="الأراضي الزراعية"
                    android:textColor="@color/white"
                    android:textSize="38sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/wishlist"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:id="@+id/controlledLandsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/addLand"
                        android:layout_width="match_parent"
                        android:layout_height="66dp"
                        android:backgroundTint="#79C67C"
                        android:text="+ إضافة أرض"
                        android:textColor="#FFFFFF"
                        android:textSize="34sp" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
